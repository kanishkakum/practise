<p id="notice"><%= notice %></p>

<%= form_tag products_path, :method => 'get' do %>
<%= text_field_tag :search , params[:search] %>
<%= submit_tag "search" %>
</end>

<h1>Products</h1>



<table>
  <thead>
    <tr>
      <th id= "checkall"><%= check_box_tag 'select_all' %></th> 
      <th>title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      
    

    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr >
        <td><%= check_box_tag "product_ids[]", product.id , checked = false, class: "mycheck" %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td class="price"><%= product.price %></td>
        <td class="image"><%= link_to (product.image_url)%></td>
     

       

        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Product', new_product_path %>
<br>
<br>

<%= will_paginate @products %>


<div>
    &nbsp &nbsp <%= submit_tag "Multi-Delete", class: 'btn' %>
</div>    

<% end %>
